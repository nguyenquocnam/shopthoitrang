<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <title>@ViewBag.Title</title>
    <link href="~/assets/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/assets/lib/gritter/css/jquery.gritter.css" />
    <link href="~/assets/css/style1.css" rel="stylesheet">
    <link href="~/assets/css/style-responsive.css" rel="stylesheet">
</head>

<body>
    <section id="container">
        <header class="header black-bg">
            <div class="sidebar-toggle-box">
                <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
            </div>
            <a href="/admin/admin/Index" class="logo"><b>ADMIN</b></a>
            <div class="top-menu">
                <ul class="nav pull-right top-menu">
                    <li>@Html.ActionLink("Logout", "logout", "login", null, new { @class = "logout" })</li>
                </ul>
            </div>
        </header>
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <ul class="sidebar-menu" id="nav-accordion">
                    <h5 class="centered">
                        @*@Shopthucung.Areas.admin.code.SessionHelper.GetSession().UserName</h5>*@
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="fa fa-th"></i>
                            <span>Data Tables</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Sản Phẩm", "SanPham", "admin")</li>
                            <li>@Html.ActionLink("Tin Tức", "TinTuc", "admin")</li>
                            <li>@Html.ActionLink("Danh Mục", "Index", "danhmuc")</li>
                            <li>@Html.ActionLink("Hóa Đơn", "Index", "hoadon")</li>
                        </ul>
                    </li>
            </ul>
        </div>
    </aside>
    <section id="main-content">
        <section class="wrapper">
            @RenderBody()
        </section>
    </section>
</section>
<script src="~/Scripts/jquey-3.5.1.min.js"></script>

<script src="~/assets/lib/bootstrap/js/bootstrap.min.js"></script>
<script class="include" type="text/javascript" src="~/assets/lib/jquery.dcjqaccordion.2.7.js"></script>
<script src="~/assets/lib/jquery.scrollTo.min.js"></script>
<script src="~/assets/lib/jquery.nicescroll.js" type="text/javascript"></script>
<script src="~/assets/lib/jquery.sparkline.js"></script>
<script src="~/assets/lib/common-scripts.js"></script>
<script type="text/javascript" src="~/assets/lib/gritter/js/jquery.gritter.js"></script>
<script type="text/javascript" src="~/assets/lib/gritter-conf.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

@RenderSection("script", required: false)
</body>

</html>
