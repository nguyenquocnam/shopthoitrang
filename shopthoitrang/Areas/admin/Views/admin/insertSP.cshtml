@model List<Shopthucung.Models.PhanLoaiSP>
@{
    ViewBag.Title = "insertSP";
    Layout = "~/Areas/admin/Views/Shared/layoutAdmin.cshtml";
}

@section script{
    <script src="~/assets/ckeditor/ckeditor.js"></script>
    <script src="~/assets/ckfinder/ckfinder.js"></script>
    <script src="~/assets/jsAdmin/adminJS1.js"></script>

}
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i>Thêm Sản Phẩm</h4>
            <form class="form-horizontal style-form" method="post">
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Mã Sản Phẩm</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="Nhập mã Sản Phẩm" name="MaSp" id="MaSp">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Tên Sản Phẩm</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="Nhập Tên Sản Phẩm" name="tenSP" id="TenSp">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Phân Loại</label>
                    <div class="col-sm-10">
                        <select name="Loai" id="loai">
                            @foreach (var item in Model)
                            {
                                <option value="@item.MaPL">@item.TenPhanLoai</option>

                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Màu Sắc</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="Nhập Màu Sắc" name="mausac" id="mausac">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Giới Tính</label>

                    <div class="col-sm-10">
                        <input type="radio" id="male" name="gender" value="1" checked>
                        <label for="male">Đực</label><br>
                        <input type="radio" id="female" name="gender" value="0">
                        <label for="female">Cái</label><br>

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Tuổi</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="Nhập Tuổi" name="tuoi" id="tuoi">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Tình trạng</label>
                    <div class="col-sm-10">
                        @Html.CheckBox("tinhtrang",false,new { @id="tinhtrang"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Tiêm VacXin</label>
                    <div class="col-sm-10">
                        @Html.CheckBox("vacxin", false, new { @id = "vacxin" })

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Tẩy giun</label>
                    <div class="col-sm-10">
                        @Html.CheckBox("taygiun", false, new { @id = "taygiun" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Xuất Xứ</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="xuatxu" id="xuatxu">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Mô tả</label>
                    <div class="col-sm-10">
                        <textarea id="mota" name="mota">
                        </textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Ảnh Hiển Thị(2 ảnh)</label>
                    <div class="col-sm-10">
                        <div id="imagelist1">
                        </div>
                        <a href="#" class="btn btn-theme" id="imgDFChoose">SELECT IMAGE</a>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Ảnh Chi Tiết</label>
                    <div class="col-sm-10">
                        <div id="imagelist2">
                        </div>
                        <a href="#" class="btn btn-theme" id="imgChooseDetail">SELECT IMAGE</a>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button id="saveSP" class="btn btn-primary" type="submit">Thêm</button>
                        <a href="/admin/admin/SanPham" class="btn btn-primary">Thoát</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

