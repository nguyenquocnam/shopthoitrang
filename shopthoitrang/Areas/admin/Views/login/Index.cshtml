@using Shopthucung.Areas.admin.code
@{
    Layout = null;
}
@model Shopthucung.Areas.admin.Models.LoginModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <title>Dashio - Bootstrap Admin Template</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/fontawesome-free-5.13.0-web/css/all.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/Content/style-responsive.css" rel="stylesheet">
</head>

<body>
    <div id="login-page">
        <div class="container">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                <h2 class="form-login-heading">sign in</h2>
                <div class="login-wrap">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Tài khoản", @autofocus = "autofocus" })
                    <br>
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Mật khẩu", @type = "password" })

                    <label class="checkbox" style="text-align:center">
                        @Html.CheckBoxFor(model => model.RememberMe)
                        Remember me
                    </label>
                    <button class="btn btn-theme btn-block" href="index.html" type="submit"><i class="fa fa-lock"></i> SIGN IN</button>
                </div>
            }

        </div>
    </div>
    <script src="~/Scripts/jquey-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>

</html>

